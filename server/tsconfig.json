{
  "compilerOptions": {
    "target": "ES2020",               // Modern JavaScript features
    "module": "commonjs",             // Node.js uses CommonJS modules
    "outDir": "./dist",               // Where compiled JS goes
    "rootDir": "./src",               // Source code location
    "strict": true,                   // Enable all strict type checks
    "esModuleInterop": true,         // Better compatibility with ES modules
    "skipLibCheck": true,            // Skip type checking of library files
    "forceConsistentCasingInFileNames": true, // Prevent case-sensitive bugs
    "moduleResolution": "node",      // How TypeScript resolves modules
    "baseUrl": "./src",              // Base directory for imports
    "paths": {                       // Optional: Custom import paths
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"]
    },
    "types": ["node"]               // Global type definitions to include
  },
  "include": ["src/**/*"],           // Files to compile
  "exclude": ["node_modules", "dist"] // Files to ignore
}

